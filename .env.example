# SmartEdu Hub - Environment Configuration Example
# انسخ هذا الملف إلى .env وقم بتحديث القيم

# Database Configuration
DB_HOST=localhost
DB_NAME=smartedu_hub
DB_USER=root
DB_PASS=

# AI API Configuration
# اختر واحدة من الخيارات التالية:

# Option 1: OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Option 2: Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Application Settings
APP_URL=http://localhost:8000
APP_ENV=development
APP_DEBUG=true

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,mp4

# Session Settings
SESSION_LIFETIME=7200
SESSION_NAME=smartedu_session
